#include <iostream>
#include <cmath>
using namespace std;

struct Point
{
    int x, y;
};

float dist(Point a, Point b)
{
    return sqrt((a.x - b.x)*(a.x - b.x) +
                (a.y - b.y)*(a.y - b.y));
}

float brute(Point p[], int n)
{
    float mn = 1e9;
    for (int i = 0; i < n; i++)
        for (int j = i + 1; j < n; j++)
            mn = min(mn, dist(p[i], p[j]));
    return mn;
}

float closest(Point p[], int n)
{
    if (n <= 3)
        return brute(p, n);

    int mid = n / 2;
    float dl = closest(p, mid);
    float dr = closest(p + mid, n - mid);

    return min(dl, dr);
}

int main()
{
    Point p[] = {
        {9,3},{2,6},{15,3},{5,1},{1,2},{12,4},{7,2},{4,7},
        {16,5},{3,3},{10,5},{6,4},{14,6},{8,6},{11,1},{13,2}
    };

    int n = 16;
    cout << "Minimum distance = " << closest(p, n);
    return 0;
}
