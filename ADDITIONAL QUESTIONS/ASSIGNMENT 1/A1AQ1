#include <iostream>
using namespace std;

bool isPossible(int arr[], int n, int m, int mid)
{
    int segments = 1;
    int currentOR = 0;

    for (int i = 0; i < n; i++)
    {
        if ((currentOR | arr[i]) <= mid)
        {
            currentOR |= arr[i];
        }
        else
        {
            segments++;
            currentOR = arr[i];
        }
    }

    return segments <= m;
}

int main()
{
    int arr[] = {1, 2, 3, 4};
    int n = 4, m = 2;

    int low = 0, high = 0;
    for (int i = 0; i < n; i++)
    {
        low = max(low, arr[i]);
        high |= arr[i];
    }

    int ans = high;

    while (low <= high)
    {
        int mid = (low + high) / 2;

        if (isPossible(arr, n, m, mid))
        {
            ans = mid;
            high = mid - 1;
        }
        else
        {
            low = mid + 1;
        }
    }

    cout << "Minimum possible maximum OR = " << ans;
    return 0;
}
